                                    <th class="col-1 text-center" >Discount <small class="font-xs" style="color: grey;">(Percentage)</small></th>
                                    <th class="col-2 text-center" >Start Date</th>
                                    <th class="col-2 text-center" >End Date</th>
                                    <th class="text-center col-3"> Action </th>
                                </tr>
                            </thead>
                        <tbody>
                            <% offerData.reverse().forEach(offer => {%> 
                            <tr>
                                <td class="text-center"><%= offer.offerType %></td>
                                <td class="text-center"><%= offer.offerName %></td>
                                <td class="text-center"><%= offer.discountPercentage %>%</td>
                                <td class="text-center"><%= offer.startDate.toLocaleDateString() %></td>
                                <td class="text-center"><%= offer.endDate.toLocaleDateString() %></td>
                                <td class="text-center">
                                    <a class="btn btn-sm" href="/admin/edit-offer/<%= offer._id %>">Edit</a>
                                
                                    <% if(offer.status === 'Unblock') {%> 
                                        <button class="btn btn-md" onclick="confirmBlockOffer('<%= offer._id %>')">Block</button>
                                    <%} else if (offer.status === 'Block') {%>
                                        <button class="btn btn-md" style="background-color: #b61300; color: #fff;" onclick="confirmUnblockOffer('<%= offer._id %>')">Unblock</button>
                                    <%} %>
                                </td>
                            </tr>
                            <%}) %>
                        </tbody>
                        <%} %>

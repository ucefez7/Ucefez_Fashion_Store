            <div class="card mb-4">
                <header class="card-header">
                    <!-- <h4>Edit</h4> -->

                    <div class="col-md-12">
                        <table class="table table-bordered table-lg">
                            <thead>
                                <tr>
                                    <!-- <th class="fs-5" style="width: 20%;"><h6>User Id</h6></th> -->
                                    <th class="fs-5" style="width: 20%;"><h6>Name</h6></th>
                                    <th class="fs-5" style="width: 20%;"><h6>email</h6></th>
                                    <th class="fs-5" style="width: 20%;"><h6>phoneNumber</h6></th>
                                    <th class="fs-5" style="width: 20%;"><h6>Status</h6></th>
                                    <th class="fs-5 text-center" style="width: 20%;"><h5>Actions</h5></th>
                                </tr>
                            </thead>
                            <tbody>  
                                <% usercollection.reverse().forEach(user => { %>  
                                    <tr>
                                        <!-- <td style="width: 20%;"><%= user._id %></td> -->
                                        <td style="width: 10%;"><%= user.username %></td>
                                        <td style="width: 15%;"><%= user.email %></td>
                                        <td style="width: 15%;"><%= user.phoneNumber %></td>
                                        <td style="width: 15%;"><%= user.status %></td>
                                        <td style="width: 25%;">
                                            <% if (user.status === 'Unblock') { %>
                                                <a href="#" class="btn btn-primary block-unblock-btn" data-action="/admin/block-user/<%= user._id %>">Block</a>
                                            <% } else if (user.status === 'Block') { %>
                                                <a href="#" class="btn btn-danger block-unblock-btn" data-action="/admin/unblock-user/<%= user._id %>">Unblock</a>
                                            <% } %>
                                            
                                        </td>
                                    </tr> 
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            const blockUnblockBtns = document.querySelectorAll('.block-unblock-btn');
                    
                            blockUnblockBtns.forEach(btn => {
                                btn.addEventListener('click', function (event) {
                                    event.preventDefault();
                    
                                    const action = this.getAttribute('data-action');
                    
                                    Swal.fire({
                                        title: 'Are you sure?',
                                        text: '',
                                        icon: 'warning',
                                        showCancelButton: true,
                                        confirmButtonColor: '#3085d6',
                                        cancelButtonColor: '#d33',
                                        confirmButtonText: 'Yes, proceed!'
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = action;
                                        }
                                    });
                                });
                            });
                        });
                    </script>

                    

                </header>

<script>
    document.addEventListener("DOMContentLoaded", function () {
  const catagoryform = document.querySelector("#category-Form");

  catagoryform.addEventListener("submit", async (event) => {
    event.preventDefault();

    // Get category ID from the URL
    const categoryId = window.location.pathname.split('/').pop(); // Assuming the URL structure is consistent

    // Get form input values
    const catgNameInput = document.querySelector("input[name='catgName']");
    const catgDiscriptionInput = document.querySelector("input[name='catgDiscription']");

    // Trim whitespace from inputs
    const catgName = catgNameInput.value.trim();
    const catgDiscription = catgDiscriptionInput.value.trim();

    // Validation: Avoid numbers in catgName
    const catgNamePattern = /^[^\d\s]+$/;
    if (!catgNamePattern.test(catgName)) {
      Swal.fire({
        icon: "error",
        title: "Oops...",
        text: "Category name should not contain numbers or spaces",
        footer: '<a href="#">Why do I have this issue?</a>',
      })
      return; // Prevent further processing if validation fails
    }

    const formData = {
      catgName: catgName,
      catgDiscription: catgDiscription,
    };

    // Append categoryId to formData
    formData.categoryId = categoryId;

    try {
      const response = await fetch(`/admin/postEdit-category/${categoryId}`, {
        method: 'POST',
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(formData),
      });

      const data = await response.json();
      console.log(data);

      if (response.ok) {
        Swal.fire({
          position: "top-center",
          icon: "success",
          title: data.message,
          showConfirmButton: false,
          timer: 1500
        });
        setTimeout(() => {
            window.location.href = "/admin/category-list";
        }, 1500);
      } else {
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: data.message,
          footer: '<a href="#">Why do I have this issue?</a>'
        });
      }
    } catch (error) {
      console.error('Error:', error);
      Swal.fire({
        icon: "error",
        title: "Oops...",
        text: "An error occurred while updating the category.",
        footer: '<a href="#">Why do I have this issue?</a>'
      });
    }
  });
});

</script>




                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Your Orders</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                      <tr>
                                        <th>Product</th>
                                        <th>Date</th>
                                        <th>ProductStatus</th>
                                        <th>PaymentStatus</th>
                                        <th>PaymentMethod</th>
                                        <th>Total</th>
                                        
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% if (!orderDetails || orderDetails.length === 0) { %>
                                        <h6>No orders</h6>
                                      <% } else { %>
                                        <% orderDetails.products.forEach((item) => { %>
                                          <tr>
                                            <td><%= item.productId?.productName %></td>
                                            <td><%= orderDetails.createdAt.toLocaleDateString() %></td>
                                            <td><%= item.status %></td>
                                            <td>
                                                <!-- <%= orderDetails.paymentStatus %> -->
                                            
                                                <% if(item.status === "Order Placed" || item.status === "Shipped" || item.status === "Delivered") {%> 
                                                    <p><%= orderDetails.paymentStatus %></p>
                                                         <%} else if(item.status === "Cancelled") {%> 
                                                 <p>Product Cancelled</p>
                                                         <%} else if (item.status === "Returned") {%> 
                                                             <p>Refunded</p>
                                                             <%}%>
                                                            
                                                            </td>
                                            <td><%= orderDetails.paymentMethod %></td>

                                            
                                            <td>₹<%= item.orderPrice.toFixed(0) %> for <%= item.quantity%> item</td>
                                           
                                          </tr>
                                        <% }); %>
                                      <% } %>
                                    </tbody>
                                  </table>
                                    <% const allItemsCanceled = orderDetails.products.every(item => item.status === 'Cancelled'); %>
                                  
                                    <!-- If all items are canceled, display a message; otherwise, show the dispatch and cancel buttons -->
                                    <% if (allItemsCanceled) { %>
                                        <p></p>
                                        <% } else { %>

    <!-- Include Cropper.js script -->
    <script src="https://unpkg.com/cropperjs/dist/cropper.min.js"></script>
    <script>
        var productId,imageIndex;
      document.addEventListener('DOMContentLoaded', function () {
        var mainImage = document.getElementById('mainImage');
        var smallImages = document.querySelectorAll('.smallImage');
        var imageContainer = document.getElementById('imageContainer');
            var cropButton = document.getElementById('cropButton');
  
        var cropper;
        
  
        smallImages.forEach(function (smallImage) {
          smallImage.addEventListener('click', function (e) {
            // Destroy the existing cropper instance, if any
            imageContainer.style.display = 'block';
            if (cropper) {
              cropper.destroy();
            }
  
            mainImage.src = e.target.src;

            productId = smallImage.getAttribute('data-product-id');
            imageIndex = smallImage.getAttribute('data-image-index');

            // Log the values to the console (you can use them as needed)
            
  
            // Initialize Cropper.js
            cropper = new Cropper(mainImage, {
              aspectRatio: 1, // Set your desired aspect ratio
              viewMode: 1,
              background: false, // Remove background
              modal: false, // Allow scrolling
              autoCropArea: 1, // Set the entire image as the crop area
              zoomable: true, // Enable zooming
              wheelZoomRatio: 0.1, // Adjust the speed of zooming
              cropBoxResizable: true, // Allow resizing the crop box
              cropBoxResizableWidth: 200, // Set the initial width of the crop box
              autoCrop: true, // Enable auto cropping
              centered: true, // Center the crop box
              autoCropArea: 0.8, // Set the initial size of the crop box
              movable: false, // Disable moving the image within the crop box
              guides: false, // Disable guides
              highlight: false, // Disable highlight
            });
  
            // Show the "Crop Selected Image" button when an image is selected
            cropButton.style.display = 'block';
  
            // Add event listener for mouse enter on Cropper container
            cropper.container.addEventListener('mouseenter', function () {
              // Enable wheel zoom when mouse is inside the image
              cropper.setOptions({ zoomOnWheel: true });
            });
  
            // Add event listener for mouse leave on Cropper container
            cropper.container.addEventListener('mouseleave', function () {
              // Disable wheel zoom when mouse is outside the image
              cropper.setOptions({ zoomOnWheel: false });
            });
            
          });
        });
  
        cropButton.addEventListener('click', function () {
            var smallImageElement = document.querySelector('.smallImage');      
          if (cropper) {
            var croppedDataURL = cropper.getCroppedCanvas().toDataURL();
  
            console.log('Cropped Data URL:', croppedDataURL);
  
            fetch('/admin/croppedimage', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ croppedImage: croppedDataURL ,productId , imageIndex}),
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                console.log("success", data);
                Swal.fire({
            icon: 'success',
            title: 'Image Cropped Successfully!',
            showConfirmButton: false,
            timer: 1500  
        });
        setTimeout(() => {
                        // window.location.reload();
                        window.location.href = '/admin/product-list';

                        
                    }, 1500);



            })
            .catch(error => console.error(error));
          } else {
            console.error('Cropper not initialized');
          }
        });
      });
    </script>
  

        
